<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="371.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Controllers.SellPartTabContentController">
    <children>
        <Label layoutX="24.0" layoutY="29.0" text="Part Number" />
        <TextField fx:id="partNumberField" layoutX="127.0" layoutY="25.0" />
        <Button layoutX="294.0" layoutY="62.0" mnemonicParsing="false" onAction="#sellPart" prefHeight="25.0" prefWidth="58.0" text="Sell" />
        <TableView fx:id="salesRecordTable" layoutX="15.0" layoutY="104.0" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn prefWidth="100.0" text="Warehouse">
                    <cellValueFactory>
                        <PropertyValueFactory property="warehouseName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100.0" text="Part Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="partName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="60.0" text="Part Cost">
                    <cellValueFactory>
                        <PropertyValueFactory property="partCost" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="140.0" text="Timestamp">
                    <cellValueFactory>
                        <PropertyValueFactory property="timestamp" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </TableView>
      <Label layoutX="24.0" layoutY="66.0" text="Warehouse" />
      <ComboBox fx:id="warehouseDropdown" layoutX="127.0" layoutY="62.0" prefWidth="150.0" />
    </children>
